<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/backgroundMedium"
    android:orientation="horizontal" >
    
    <!-- slika s lijeve strane -->

    <ImageView
        android:id="@+id/mala_slika_filma"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/slika_filma_mala"
        android:src="@drawable/film_ikona_predlozak" />
    
    <!-- predstavlja sav tekst pokraj slike, organiziran u 2 retka. Prvi redak je naziv filma, drugi uloge u filmu -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:paddingLeft="5dp" >

        <!-- naziv filma -->
        <TextView
            android:id="@+id/naziv_filma_mali"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_gravity="top"
            android:text="@string/tmp_naslov_filma"
            android:textSize="14sp" 
            android:textStyle="bold"
            android:textColor="#ffffffd5" />
       
        <!-- uloge u filmu -->
        <TextView
            android:id="@+id/uloge_filma_male"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingTop="5dp"
            android:text="@string/tmp_glumci_filma"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="#ffffffd5" />
        
        <TextView
            android:id="@+id/id_filma_u_bazi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
	        
    </LinearLayout>

</LinearLayout>
