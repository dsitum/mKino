<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundDark"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/pocetni_btnMapa"
                android:src="@drawable/desna_traka_srednja" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right|bottom"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/pocetni_btnMapa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#00000000"
                    android:contentDescription="@string/pocetni_btnMapa"
                    android:maxHeight="120dp"
                    android:src="@drawable/mapa100_93" />

                <ImageButton
                    android:id="@+id/pocetna_btnMojeRezervacije"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="20dp"
                    android:background="#00000000"
                    android:contentDescription="@string/pocetna_btnMojeRezervacije"
                    android:src="@drawable/mojerezervacije100_93" />

                <ImageButton
                    android:id="@+id/pocetna_brnRezerviraj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#00000000"
                    android:contentDescription="@string/pocetna_brnRezerviraj"
                    android:src="@drawable/projekcije100_93" />

                <ImageButton
                    android:id="@+id/pocetna_btnAktualno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#00000000"
                    android:contentDescription="@string/pocetna_btnAktualno"
                    android:src="@drawable/aktualno100x93" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/pocetna_btnMojeRezervacije"
                    android:src="@drawable/lijeva_traka_srednja" />

      </LinearLayout>

    </LinearLayout>
