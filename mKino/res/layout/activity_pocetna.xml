<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
         android:background="#282828">

        <ImageView
            android:id="@+id/pocetni_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo260x220" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right|bottom"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/pocetni_btnMapa"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="bottom|right"
                    android:layout_weight="0"
                    android:background="#00000000"
                    android:maxHeight="90dp"
                    android:src="@drawable/mapa_100x93" />

                <ImageButton
                    android:id="@+id/pocetna_btnMojeRezervacije"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="top|right"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="0"
                    android:background="#00000000"
                    android:src="@drawable/korisnik_100x93" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/pocetna_brnRezerviraj"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="0"
                    android:background="#00000000"
                    android:src="@drawable/rezerviraj_100x93" />

                <ImageButton
                    android:id="@+id/pocetna_btnAktualno"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="top|left"
                    android:layout_weight="0"
                    android:background="#00000000"
                    android:src="@drawable/aktualno_100x93" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
