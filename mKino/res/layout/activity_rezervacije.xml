<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDark"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/projekcija_slikaFilma"
        android:layout_width="180dp"
        android:layout_height="182dp"
        android:layout_gravity="center"
        android:contentDescription="@string/slika_filma"
        android:paddingTop="10dp"
        android:src="@drawable/film_ikona_predlozak" />

    <TextView
        android:id="@+id/projekcija_naslov_filma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:gravity="center|top"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/tmp_naslov_filma"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffd5"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:background="@color/backgroundMedium"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_rezervacije_grad"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:background="@color/backgroundDark"
            android:gravity="center"
            android:text="@string/grad_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greenDark"
            android:typeface="sans" />

        <TextView
            android:id="@+id/txt_rezervacije_grad"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:background="@color/backgroundDark"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:textColor="@color/textWhite" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:background="@color/backgroundMedium"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/detalji_filma_naslov"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="0dp"
            android:background="@color/backgroundDark"
            android:gravity="center"
            android:text="@string/lbl_vrijeme_projekcije"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greenDark"
            android:typeface="sans" />

        <TextView
            android:id="@+id/txt_rezervacije_vrijeme"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:background="@color/backgroundDark"
            android:gravity="center"
            android:textColor="@color/textWhite" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:background="@color/backgroundMedium"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/backgroundDark"
            android:gravity="center"
            android:text="@string/lbl_rezervacije_dvorana"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greenDark"
            android:typeface="sans" />

        <TextView
            android:id="@+id/txt_rezervacije_dvorana"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:background="@color/backgroundDark"
            android:gravity="center"
            android:textColor="@color/textWhite"
            android:textColorHint="@color/textWhite" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:background="@color/backgroundMedium"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/rezervacija_cijena_lbl"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/backgroundDark"
            android:gravity="center"
            android:text="@string/cijena"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greenDark"
            android:typeface="sans" />

        <TextView
            android:id="@+id/rezervacija_cijena"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:background="@color/backgroundDark"
            android:gravity="center"
            android:textColor="@color/textWhite"
            android:textColorHint="@color/textWhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:background="@color/backgroundMedium"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/backgroundDark"
            android:gravity="center"
            android:text="@string/lbl_rezervirana_sjedala"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greenDark"
            android:typeface="sans" />

        <TextView
            android:id="@+id/rezervacije_sjedala_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:background="@color/backgroundDark"
            android:gravity="center"
            android:text="@string/rezervirana_sjedala"
            android:textColor="@color/textWhite"
            android:textColorHint="@color/textWhite" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <Button
            android:id="@+id/btn_rezervacije_mapa_sjedala"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/btn_mapa_sjedala"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_rezervacija_rezerviraj"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="1dp"
            android:background="@color/greenLight"
            android:paddingTop="0dp"
            android:text="@string/rezervacije_rezerviraj" />

    </LinearLayout>

</LinearLayout>